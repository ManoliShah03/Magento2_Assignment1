<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="custom_section" translate="label" sortOrder="100">
            <label>Custom Section</label>
        </tab>
        <section id="custom_group" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Custom Group</label>
            <tab>custom_section</tab>
            <resource>Magento_Config::config</resource>
            <group id="custom_field" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Custom Field</label>
                <field id="custom_field_value" translate="label comment" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Custom Field Value</label>
                    <comment>Enter a value for the custom field.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
